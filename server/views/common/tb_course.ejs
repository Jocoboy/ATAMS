<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col align-self-end">
                <button class="btn btn-success pull-right mb-2 " data-toggle="modal"
                    data-target="#addModal">添加记录</button>
            </div>
        </div>
        <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">添加记录</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="?" method="post" id="course_form_add">
                            <div class="form-group">
                                <label for="Cno">课程号</label>
                                <input type="text" class="form-control" name="Cno" id="Cno" autofocus="autofocus">
                                <div class="invalid-feedback" id="cno-feedback">课程号由10位数字组成</div>
                            </div>
                            <div class="form-group">
                                <label for="Cname">课程名</label>
                                <input type="text" class="form-control" name="Cname" id="Cname">
                                <div class="invalid-feedback" id="cname-feedback">课程名由2~20个字符组成</div>
                            </div>
                            <div class="form-group">
                                <label for="Ctype">课程类型</label>
                                <select id="Ctype" class="form-control" name="Ctype">
                                  <option selected disabled value="">--选择课程类型--</option>
                                  <option>公共基础课</option>
                                  <option>学科基础课</option>
                                  <option>专业课</option>
                                  <option>通识课</option>
                                  <option>实践课</option>
                                  <option>专业基础课</option>
                                </select>
                                <div class="invalid-feedback" id="ctype-feedback">请选择课程类型</div>
                              </div>
                            <!-- <div class="form-group">
                                <label for="Ctype">课程类型</label>
                                <input type="text" class="form-control" name="Ctype" id="Ctype">
                            </div> -->
                            <div class="form-group">
                                <label for="Tno">教师号</label>
                                <input type="text" class="form-control" name="Tno" id="Tno">
                                <div class="invalid-feedback" id="tno-feedback">教师号由13位数字组成</div>
                            </div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">放弃添加</button>
                            <button type="submit" class="btn btn-primary">确认添加</button>
                        </form>
                    </div>
                    <!-- <div class="modal-footer">
     
                    </div> -->
                </div>
            </div>
        </div>
        <%if(typeof modData != 'undefined'){%>

        <div class="modal-body">
            <form action="?" method="post" id="course_form_mod">
                <input type="hidden" name="modified" value="<%= modData[0].Cno %>">
                <div class="form-group">
                    <label for="Cno">课程号</label>
                    <input type="text" class="form-control" name="Cno" id="Cno" value="<%= modData[0].Cno %>"
                        autofocus="autofocus">
                        <div class="invalid-feedback" id="cno-feedback">课程号由10位数字组成</div>
                </div>
                <div class="form-group">
                    <label for="Cname">课程名</label>
                    <input type="text" class="form-control" name="Cname" id="Cname" value="<%= modData[0].Cname %>">
                    <div class="invalid-feedback" id="cname-feedback">课程名由2~20个字符组成</div>
                </div>
                <div class="form-group">
                    <label for="Ctype">课程类型</label>
                    <select id="Ctype" class="form-control" name="Ctype">
                        <option selected><%= modData[0].Ctype %></option>
                        <option>公共基础课</option>
                        <option>学科基础课</option>
                        <option>专业课</option>
                        <option>通识课</option>
                        <option>实践课</option>
                        <option>专业基础课</option>
                      </select>
                    <!-- <input type="text" class="form-control" name="Ctype" id="Ctype" value="<%= modData[0].Ctype %>"> -->
                </div>
                <div class="form-group">
                    <label for="Tno">教师号</label>
                    <input type="text" class="form-control" name="Tno" id="Tno" value="<%= modData[0].Tno %>">
                    <div class="invalid-feedback" id="tno-feedback">教师号由13位数字组成</div>
                </div>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">放弃修改</button>
                <button type="submit" class="btn btn-primary">保存修改</button>
            </form>
        </div>

        <%}%>
        <table class="table">
            <caption class="text-white font-weight-bold bg-dark">课程表</caption>
            <tr>
                <th class="Cno">课程号</th>
                <th class="Cname">课程名</th>
                <th class="Ctype">课程类型</th>
                <th class="Tno">教师号</th>
                <th class="Uop">用户操作</th>
            </tr>
            <% for(var i = 0;i<usersData.length;i++){%>
        <tr>
            <td><%=usersData[i].Cno%></td>
            <td><%=usersData[i].Cname%></td>
            <td><%=usersData[i].Ctype%></td>
            <td><%=usersData[i].Tno%></td>
            <td>
                <a href="?action=del&id=<%=usersData[i].Cno%>" onclick="return confirm('确定删除?')">
                    <button class="btn btn-danger">删除</button>
                </a>
                <a href="?action=mod&id=<%=usersData[i].Cno%>">
                    <button class="btn btn-primary" data-toggle="modal" data-target="#modModal">修改</button>
                </a>

            </td>
        </tr>
        <%}%>
        </table>

    </div>
</body>
<script src="/javascripts/jquery.min.js"></script>
<script>
    $(document).ready(() => {
        var pattern_cno = /^\d{10}$/;
        var pattern_cname = /^.{2,20}$/;
        var pattern_tno = /^\d{13}$/;

        function changeCno(){
            if (!pattern_cno.test($("#course_form_add input[name='Cno']").val())) {
                $("#course_form_add input[name='Cno']").removeClass("is-valid");
                $("#course_form_add input[name='Cno']").addClass("is-invalid");

            }
            else {
                $("#course_form_add input[name='Cno']").removeClass("is-invalid");
                $("#course_form_add input[name='Cno']").addClass("is-valid");
            }

            if (!pattern_cno.test($("#course_form_mod input[name='Cno']").val())) {
                $("#course_form_mod input[name='Cno']").removeClass("is-valid");
                $("#course_form_mod input[name='Cno']").addClass("is-invalid");

            }
            else {
                $("#course_form_mod input[name='Cno']").removeClass("is-invalid");
                $("#course_form_mod input[name='Cno']").addClass("is-valid");
            }
        }

        function changeCname(){
            if (!pattern_cname.test($("#course_form_add input[name='Cname']").val())) {
                $("#course_form_add input[name='Cname']").removeClass("is-valid");
                $("#course_form_add input[name='Cname']").addClass("is-invalid");

            }
            else {
                $("#course_form_add input[name='Cname']").removeClass("is-invalid");
                $("#course_form_add input[name='Cname']").addClass("is-valid");
            }

            if (!pattern_cname.test($("#course_form_mod input[name='Cname']").val())) {
                $("#course_form_mod input[name='Cname']").removeClass("is-valid");
                $("#course_form_mod input[name='Cname']").addClass("is-invalid");

            }
            else {
                $("#course_form_mod input[name='Cname']").removeClass("is-invalid");
                $("#course_form_mod input[name='Cname']").addClass("is-valid");
            }
        }

        function changeTno(){
            if (!pattern_tno.test($("#course_form_add input[name='Tno']").val())) {
                $("#course_form_add input[name='Tno']").removeClass("is-valid");
                $("#course_form_add input[name='Tno']").addClass("is-invalid");

            }
            else {
                $("#course_form_add input[name='Tno']").removeClass("is-invalid");
                $("#course_form_add input[name='Tno']").addClass("is-valid");
            }

            if (!pattern_tno.test($("#course_form_mod input[name='Tno']").val())) {
                $("#course_form_mod input[name='Tno']").removeClass("is-valid");
                $("#course_form_mod input[name='Tno']").addClass("is-invalid");

            }
            else {
                $("#course_form_mod input[name='Tno']").removeClass("is-invalid");
                $("#course_form_mod input[name='Tno']").addClass("is-valid");
            }
        }
        changeCno();
        changeCname()
        changeTno();
        
        $("input[name='Cno']").change(() => {
            changeCno();
        });
        $("input[name='Cname']").change(() => {
            changeCname()
        });
        $("input[name='Tno']").change(() => {
            changeTno();
        });
    })
</script>


